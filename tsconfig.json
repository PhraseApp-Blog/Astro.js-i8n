{
  "extends": "astro/tsconfigs/base", // Use the base config instead of strict
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "moduleResolution": "bundler",
    "allowJs": true, // Allow JavaScript files
    "strict": false, // Disable strict type-checking
    "noImplicitAny": false // Allow variables and params to have implicit `any
    }
}
