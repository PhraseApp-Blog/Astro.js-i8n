---
const { ingredients } = Astro.props;

// Transform the ingredients object into an array of sections
const sections = Object.keys(ingredients).map(section => ({
  name: section,
  items: ingredients[section]
}));
---

{sections.map(section => (
  <div class="mb-6 last:mb-0">
    {section.name !== 'main' && (
      <h3 class="text-lg font-medium text-gray-800 mb-3 capitalize">
        {section.name}
      </h3>
    )}
    <ul class="space-y-2">
      {section.items.map((ingredient: string) => (
        <li class="flex items-center gap-2">
          <svg class="h-2 w-2 text-emerald-600 flex-shrink-0" fill="currentColor" viewBox="0 0 8 8">
            <circle cx="4" cy="4" r="3" />
          </svg>
          <span class="text-gray-700">{ingredient}</span>
        </li>
      ))}
    </ul>
  </div>
))}